<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="me.farruhhabibullaev.edu.javatpoint.inheritence.perhierarchy.Employees"
           table="emp123" discriminator-value="emp">
        <id name="id">
            <generator class="increment"/>
        </id>

        <discriminator column="type" type="string"/>
        <property name="name"/>


        <subclass name="me.farruhhabibullaev.edu.javatpoint.inheritence.perhierarchy.RegularEmployee" discriminator-value="emp_reg">
            <property name="salary"/>
            <property name="bonus"/>
        </subclass>

        <subclass name="me.farruhhabibullaev.edu.javatpoint.inheritence.perhierarchy.ContractEmployee" discriminator-value="emp_contr">
            <property name="payPerHour"/>
            <property name="contractDuration"/>
        </subclass>


    </class>
</hibernate-mapping>