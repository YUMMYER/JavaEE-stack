<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="me.farruhhabibullaev.edu.javatpoint.inheritence.perconcreteclassxml.Payment" table="payment">
        <id name="paymentId" >
            <generator class="increment"/>
        </id>
        <property name="amount"/>

        <union-subclass name="me.farruhhabibullaev.edu.javatpoint.inheritence.perconcreteclassxml.CreditCard" table="creditcard">
            <property name="creditCardType" length="20"/>
        </union-subclass>

        <union-subclass name="me.farruhhabibullaev.edu.javatpoint.inheritence.perconcreteclassxml.Check" table="check">
            <property name="checkType" length="10"/>
        </union-subclass>
    </class>
</hibernate-mapping>