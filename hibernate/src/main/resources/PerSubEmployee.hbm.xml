<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC

        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="me.farruhhabibullaev.edu.javatpoint.inheritence.persubclassxml.Employees" table="subemp">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>

        <joined-subclass name="me.farruhhabibullaev.edu.javatpoint.inheritence.persubclassxml.RegularEmployee" table="regemp">
            <key column="eid"></key>
            <property name="salary"></property>
            <property name="bonus"></property>
        </joined-subclass>

        <joined-subclass name="me.farruhhabibullaev.edu.javatpoint.inheritence.persubclassxml.ContractEmployee" table="conemp">
            <key column="eid"></key>
            <property name="payPerHour"></property>
            <property name="contractDuration"></property>
        </joined-subclass>
    </class>

</hibernate-mapping>